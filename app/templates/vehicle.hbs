<div class="container-fluid vehicle">
  <div class="row">
    <div class="col-xs-7 col-xs-offset-1 col-sm-4 vehicle-info">
      <div class="border">

      <h4 class="box-title">{{model.vehicle.year}} {{model.vehicle.make}} {{model.vehicle.model}}</h4>

    <div class="box-text">
      <h5>{{format-mileage model.vehicle.mileage}} miles</h5>

      <div>
        {{#link-to "update" model.vehicle}}Update vehicle {{/link-to}}</div>
      <div>
          <button {{action 'deleteVehicle' model.vehicle}}> Delete Vehicle</button>
      </div>



      <div style="margin-top: 20px;">
        {{#link-to 'vehicles' class="links" }}Back to dashboard{{/link-to}}
      </div>


    </div>
    <div>
      {{new-work createWork='createWork'
           vehicle=model.vehicle}}
    </div>
  </div>
</div>

    <div class="col-xs-6">
      <h2>Maintenance History</h2> {{vehicle-works vehicle=model.vehicle
                    deleteWork='deleteWork'}}
    </div>

  </div>
</div>
