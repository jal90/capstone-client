{{!-- {{update-work-form work=model
                   updateWork='updateWork'}} --}}

  <div class="container-fluid">
   <form {{action 'updateWork' model on='submit'}}>
     Name: {{input placeholder='name' value=model.name class=inline}}<br>
     Date: {{input placeholder='date' value=model.date}}<br>
     Mileage: {{input placeholder='mileage' value=model.mileage}}<br>
     <button type='submit'> Update this work </button>
   </form>
   {{#link-to 'vehicle' model.vehicle}}Back to vehicle{{/link-to}}
  </div>
