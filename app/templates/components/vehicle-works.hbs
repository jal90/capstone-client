<div class="row header-underline">
  <div class="col-md-4">
    <h3>Work</h3>
  </div>
  <div class="col-md-4">
    <h3>Date</h3>
  </div>
  <div class="col-md-4">
    <h3>Mileage</h3>
  </div>
</div>
{{#each vehicle.works as |work|}}
<div class="section-outline">
  <div class="row">
    <div class="col-md-4">
      <h4>{{work.name}}</h4>
    </div>
    <div class="col-md-4">
      <h4>{{work.date}}</h4>
    </div>
    <div class="col-md-4">
      <h4>{{work.mileage}} miles</h4>
    </div>
  </div>
  <div style="margin: 5px;">
    <button {{action 'deleteWork' work}}> Delete this work </button>
    {{!-- TODO: change back to work.id so model hook fires? --}}
    {{#link-to 'update-work' work}}Update this work{{/link-to}}
  </div>
</div>
{{/each}}
