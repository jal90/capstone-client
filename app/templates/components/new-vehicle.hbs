<button {{action 'toggleCreateForm'}}> Create New Vehicle </button>

<form {{action 'createVehicle' on='submit'}}>
  {{input placeholder='make' value=vehicle.make}}
  {{input placeholder='model' value=vehicle.model}}
  {{input placeholder='year' value=vehicle.year}}
  {{input placeholder='mileage' value=vehicle.mileage}}
  <button type='submit'> Create a new vehicle </button>
</form>
