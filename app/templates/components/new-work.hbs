<button class="btn-primary" {{action 'toggleWorkForm'}}> Log new work... </button>

<form {{action 'createWork' on='submit'}} class="route-forms">
  {{input placeholder='Name of work' value=work.name required='true'}}
  {{input type="date" placeholder='Date of work' value=work.date}}
  {{input type="number" placeholder='Mileage' max="999999" min="0" value=work.mileage required='true'}}
  {{input type="number" step="0.01" placeholder='Price' max="9999" min="0" value=work.price}}
  <button type='submit' class="btn btn-warning" style="margin-left: 30%;"> Save </button>
</form>
